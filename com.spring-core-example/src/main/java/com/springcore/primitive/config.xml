<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- This is our beans using setter injection to define -->

<!-- 	first bean -->
	<bean class="com.springcore.primitive.Student" name="student1">
		<property name="studentId">
			<value>11</value>
		</property>

		<property name="studentName">
			<value>Narendra Sharma</value>
		</property>

		<property name="studentAddress">			
			<value>New Delhi</value>
		</property>
	</bean>
	

<!-- 	second bean -->
	<bean class="com.springcore.primitive.Student" name="student2">

		<property name="studentId" value="22" />
		<property name="studentName" value="Ram Kapoor" />
		<property name="studentAddress" value="Mumbai" />

	</bean>
	
	<!-- 	third bean using p schema -->
	
	<bean class="com.springcore.primitive.Student" name="student3" p:studentId="33" p:studentName="shushmita sharma" p:studentAddress="jharkhand"/>



</beans>